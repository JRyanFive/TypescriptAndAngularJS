                            <input type="submit" class="search-button" value="&nbsp;" />
                        </form>
                    </div>-->

                    <div class="clear-float"></div>

                </div>
                <!-- END .header-menu -->
            </div>

            <!-- END .header -->
        </div>

        <!-- BEGIN .content -->
        <div class="content">

            <!-- BEGIN .wrapper -->
            @RenderBody()
            <!-- BEGIN .content -->
        </div>

        <!-- BEGIN .footer -->
        <div class="footer">

            <!-- BEGIN .wrapper -->
            <div class="wrapper">

                <!-- BEGIN .footer-content -->
                <div class="footer-content">
                    <div class="left">&copy; 2016 Copyright <b>DailyTinTuc.com</b></div>
                    <div class="clear-float"></div>
                    <!-- END .footer-content -->
                </div>


                <!-- END .wrapper -->
            </div>

            <!-- END .footer -->
        </div>

        <!-- END .boxed -->
    </div>
