                <!-- END .header-middle -->
            </div>

            <!-- BEGIN .header-menu -->
            <div class="header-menu thisisfixed">
                <div class="wrapper">

                    <ul class="main-menu">
                        <li style="background:#264c84;color:#264c84;"><a href="@Url.Content("~/")"><i class="fa fa-home fa-lg"></i></a></li>
                        <li style="background:#264c84;color:#264c84;">
                            <a href="~/xa-hoi">Xã hội<span>&nbsp;</span></a>
