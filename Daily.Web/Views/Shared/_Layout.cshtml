                        <li style="background:#338aa6;color:#338aa6;"><a href="~/kinh-doanh">Kinh doanh</a></li>
                        <li style="background:#4b4b4b;color:#4b4b4b;">
                            <a href="~/the-thao">Thể thao<span>&nbsp;</span></a>
                            <ul class="sub-menu">
                                <li><a href="~/bong-da">Bóng đá</a></li>
                                <li><a href="~/quan-vot">Quần vợt</a></li>
                                <li><a href="~/hau-truong-the-thao">Hậu trường</a></li>
                            </ul>
